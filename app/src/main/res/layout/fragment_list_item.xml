<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHeading"
            android:textSize="32sp"
            android:gravity="center"
            android:fontFamily="Arial"
            android:textStyle="bold"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewImage"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="20dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textViewLat"
            android:text="Latitude:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewImage"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/textViewLatContent"
            android:layout_below="@+id/textViewLat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/textViewLong"
            android:layout_below="@+id/textViewLatContent"
            android:text="Longitude:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewLongContent"
            android:layout_below="@+id/textViewLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/black"
            android:layout_below="@+id/textViewLongContent"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"/>

        <TextView
            android:id="@+id/textViewRating"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
</android.support.v7.widget.CardView>